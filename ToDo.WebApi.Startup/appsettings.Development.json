{
  "ConnectionStrings": {
    "DefaultDatabaseConnection": "Host=localhost;Port=5432;Database=testedb;Username=admin;Password=secretpassword!234"
  },
  "CacheSettings": {
    "AbsoluteExpirationInHours": 1,
    "SlidingExpirationInMinutes": 30
  },
  "JwtSettings": {
    "Secret": "ultra-mega-incredulously-secret-key-fr",
    "ExpiryMinutes": "600",
    "Issuer": "Development-Todo-webapi"
  },
  "AuthSettings": {
    "Secret": "ultra-mega-incredulously-secret-key-fr"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithProcessId",
      "WithHttpContext",
      "WithClientAgent",
      "WithExceptionStackTraceHash",
      "WithCorrelationId",
      "WithEnrichedProperties"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "===> {Timestamp:HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341",
          "apiKey": "none"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
