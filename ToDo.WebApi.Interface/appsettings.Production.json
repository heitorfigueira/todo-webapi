{
  "ConnectionStrings": {
    "DefaultDatabaseConnection": "Host=localhost;Port=5432;Database=testedb;Username=admin;Password=secrepassword!234"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithProcessId",
      "WithHttpContext",
      "WithClientAgent",
      "WithExceptionStackTraceHash",
      "WithCorrelationId",
      "WithEnrichedProperties"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "===> {Timestamp:HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
